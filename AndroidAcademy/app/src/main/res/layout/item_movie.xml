<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieItemBase"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:focusable="false"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_movie_item_background"
        tools:ignore="ContentDescription">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftSideGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            app:layout_constraintGuide_begin="8dp"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/moviePreviewImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            android:src="@drawable/movie_item_bachground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/gradientMaskImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/movie_item_gradient_mask"
            app:layout_constraintBottom_toBottomOf="@id/moviePreviewImage"
            app:layout_constraintEnd_toEndOf="@id/moviePreviewImage"
            app:layout_constraintStart_toStartOf="@id/moviePreviewImage"
            app:layout_constraintTop_toTopOf="@id/moviePreviewImage" />

        <View
            android:id="@+id/reviewsBaseline"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="@id/moviePreviewImage"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/pg"
            layout="@layout/pg_layout"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/leftSideGuideline"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/likeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="12dp"
            android:paddingEnd="8dp"
            android:src="@drawable/ic_like"
            app:layout_constraintBottom_toBottomOf="@id/pg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/pg"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="@string/action_adventure_fantasy"
            android:textColor="@color/accentTextColor"
            android:textSize="@dimen/smallTextSize"
            app:layout_constraintBottom_toTopOf="@id/reviews"
            app:layout_constraintStart_toStartOf="@id/leftSideGuideline" />

        <com.zhukovartemvl.androidacademy.ui.utils.RatingBarSvg
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:progressBackgroundTint="@color/starEmpty"
            android:progressDrawable="@drawable/ratingbar_svg_selector"
            android:progressTint="@color/starFull"
            android:rating="3.5"
            android:secondaryProgressTint="@color/starEmpty"
            app:drawableHeight="8dp"
            app:drawableWidth="8dp"
            app:innerPadding="2dp"
            app:layout_constraintBottom_toBottomOf="@id/reviews"
            app:layout_constraintStart_toStartOf="@+id/leftSideGuideline"
            app:layout_constraintTop_toTopOf="@id/reviews" />

        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/reviews_text"
            android:textColor="@color/reviewsTextColor"
            android:textSize="@dimen/smallTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/reviewsBaseline"
            app:layout_constraintStart_toEndOf="@id/ratingBar"
            app:layout_constraintTop_toTopOf="@id/reviewsBaseline" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sample_movie_title"
            android:textColor="@color/headerTextColor"
            android:textSize="@dimen/defaultTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/duration"
            app:layout_constraintStart_toStartOf="@id/leftSideGuideline"
            app:layout_constraintTop_toBottomOf="@id/moviePreviewImage" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/sample_movie_duration"
            android:textColor="@color/movieDurationTextColor"
            android:textSize="@dimen/smallTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/leftSideGuideline" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
